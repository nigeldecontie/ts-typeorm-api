{
  "name": "luma-backend",
  "version": "0.1.0",
  "author": "Ursa Creative",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "cross-env TS_NODE_BASEURL=./dist node -r tsconfig-paths/register ./dist/bootstrap.js",
    "watch": "ts-node-dev --respawn --transpile-only --no-notify -r tsconfig-paths/register src/bootstrap.ts",
    "test": "cross-env NODE_PATH=./src jest --runInBand",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "seed:create": "ts-node ./node_modules/typeorm/cli.js migration:create --config ./src/typeorm/config/ormconfig.seed.ts -n",
    "seed:run": "ts-node ./node_modules/typeorm/cli.js migration:run --config ./src/typeorm/config/ormconfig.seed.ts",
    "seed:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert --config ./src/typeorm/config/ormconfig.seed.ts",
    "migration:create": "ts-node ./node_modules/typeorm/cli.js migration:create --config ./src/typeorm/config/ormconfig.migrate.ts -n",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate --config ./src/typeorm/config/ormconfig.migrate.ts -n",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run --config ./src/typeorm/config/ormconfig.migrate.ts",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert --config ./src/typeorm/config/ormconfig.migrate.ts",
    "db:drop": "ts-node ./node_modules/typeorm/cli.js schema:drop --config ./src/typeorm/config/ormconfig.migrate.ts",
    "db:sync": "ts-node ./node_modules/typeorm/cli.js schema:sync --config ./src/typeorm/config/ormconfig.migrate.ts",
    "db:reset": "npm run db:drop && npm run migration:run && npm run seed:run"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.3",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "eslint": "^8.13.0",
    "gen-env-types": "^1.3.4",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node-dev": "^1.1.8",
    "tsc-alias": "^1.6.6",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  }
}
